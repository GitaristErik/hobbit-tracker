<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Hobbittracker" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- hide title -->
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <!-- Primary brand color. -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- switch color -->
        <item name="colorPrimary">@color/orange_700</item>
        <item name="colorOnSurface">@color/purple_700</item>
        <item name="colorSecondary">@color/orange_700</item>
        <item name="colorAccent">@color/black</item>
        <item name="colorControlNormal">@color/orange_200</item>
        <item name="colorControlActivated">@color/orange_200</item>
    </style>




    <style name="ButtonOrange" parent="Widget.MaterialComponents.Button">
        <!-- background -->
        <item name="android:backgroundTint">@color/orange_700</item>
        <item name="background">@drawable/ic_text_field</item>
        <item name="android:stateListAnimator">@null</item>
        <!-- text -->
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:textAllCaps">false</item>
        <!-- size -->
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="ButtonWhite" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/white</item>
        <item name="background">@drawable/ic_text_field</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:textAllCaps">false</item>
        <!-- size -->
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="EditTextOrange" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="hintTextColor">@color/purple_200</item>
        <item name="drawableTint">@color/purple_200</item>
        <item name="boxBackgroundColor">@color/orange_200</item>
        <item name="colorControlActivated">@color/orange_200</item>
        <item name="colorControlNormal">@android:color/holo_red_light</item>
    </style>

    <style name="ToggleButtonGroupStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:stateListAnimator">@null</item>
        <item name="colorAccent">@color/orange_700</item>
        <item name="background">@drawable/ic_text_field</item>
        <item name="backgroundTint">@color/toggle_buttom_selector</item>
        <item name="android:textColor">@color/purple_700</item>
    </style>



    <style name="ErrorText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/holo_red_light</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="HintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/holo_green_dark</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="TextBody" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:textSize">14sp</item>

    </style>

    <!-- Bottom Sheet Dialog theme -->
    <style name="bottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30dp</item>
    </style>

</resources>