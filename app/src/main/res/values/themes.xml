<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Hobbittracker" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- hide title -->
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <!-- Primary brand color. -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- switch color -->
        <item name="colorOnSurface">@color/purple_700</item>
        <item name="colorSecondary">@color/orange_700</item>

    </style>



    <style name="ButtonOrange" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/orange_700</item>
        <item name="background">@drawable/ic_text_field</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="ButtonWhite" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/white</item>
        <item name="background">@drawable/ic_text_field</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

<!--    TODO: TEMP themes for habits -->
    <!-- Habit List theme -->
    <style name="HabitListTheme" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <!-- Bottom Sheet Dialog theme -->
    <style name="bottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
    </style>

    <!-- Alarm WeekDay theme -->
    <style name="AlarmWeekDayTheme" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="android:shape">oval</item>
    </style>

    <!-- Alarm Chip Text theme -->
    <style name="AlarmChipTextTheme" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Alarm Chip theme -->
    <style name="AlarmChipTheme" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/selector_chip</item>
        <item name="rippleColor">@color/appGreenColor</item>
        <item name="chipCornerRadius">120dp</item>
        <item name="chipMinTouchTargetSize">0dp</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">#787877</item>
    </style>

    <!-- Alarm switch theme -->
    <style name="ThemeOverlay.App.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
        <item name="colorSurface">#ffffff</item>
        <item name="colorOnSurface">#303030</item>
        <item name="colorSecondary">@color/appGreenColor</item>
    </style>

</resources>