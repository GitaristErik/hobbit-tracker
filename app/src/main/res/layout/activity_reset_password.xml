<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.auth.ResetPasswordActivity">

    <TextView
        android:id="@+id/tv_reset_password_loginnow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/already_have_an_account"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/textsize_medium"
        android:layout_marginTop="250dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tiet_reset_password_email"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/iv_reset_password_titleicon"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="152dp"
        android:src="@drawable/forgot_password_1"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btn_reset_password_cancel"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_marginBottom="36dp"
        android:background="@drawable/rounded_lightblue_button"
        android:layout_marginLeft="44dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/guideline_vertical" />

    <Button
        android:id="@+id/btn_reset_password_send"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Send"
        android:layout_marginBottom="36dp"
        android:background="@drawable/rounded_blue_button"
        android:textColor="@color/white"
        android:layout_marginRight="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/tiet_reset_password_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_email"
        android:drawableLeft="@drawable/ic_email"
        android:drawablePadding="@dimen/margin_small"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:textSize="@dimen/textsize_large"
        android:layout_marginTop="96dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_reset_password_titleicon"
        tools:layout_editor_absoluteX="0dp" />
</androidx.constraintlayout.widget.ConstraintLayout>